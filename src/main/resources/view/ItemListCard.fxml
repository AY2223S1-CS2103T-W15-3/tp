<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="120" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <VBox spacing="5">
                <HBox spacing="5">
                    <Label fx:id="id" styleClass="cell_big_label_item">
                        <minWidth>
                            <!-- Ensures that the label text is never truncated -->
                            <Region fx:constant="USE_PREF_SIZE" />
                        </minWidth>
                    </Label>
                    <Label fx:id="itemName" text="\$first" styleClass="cell_big_label_item" />
                </HBox>

                <HBox fx:id="quantityRow" alignment="CENTER" styleClass="quantity-row" spacing="10.0">
                    <Region styleClass="quantity-icon" id="quantityIcon"/>
                    <Label fx:id="quantity" styleClass="quantity-text" text="\$quantity" wrapText="true"/>
                    <Region styleClass="sellPrice-icon" id="sellPriceIcon"/>
                    <Label fx:id="sellPrice" styleClass="quantity-text" text="\$sellPrice" wrapText="true"/>
                    <Region styleClass="costPrice-icon" id="costPriceIcon"/>
                    <Label fx:id="costPrice" styleClass="quantity-text" text="\$costPrice" wrapText="true"/>
                </HBox>

            </VBox>
            <VBox id="descriptionBox">
                <FlowPane fx:id="tags" />
                </VBox>
                <VBox id="descriptionBox">
                    <Label fx:id="description" styleClass="cell_small_label_item" text="\$description" />
            </VBox>
        </VBox>
    </GridPane>
</HBox>
